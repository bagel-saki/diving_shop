<% let i = locals.i; %>
<% let dt = locals.dt; %>
<% let d = locals.d; %>
<% let title = locals.title; %>
<% let text = locals.text; %>
<a href="" class="p-blog-card">
    <figure class="p-blog-card__img">
        <img src="assets/images/common/<%- i %>.jpg" alt="">
    </figure>
    <div class="p-blog-card__body">
        <time class="p-blog-card__date" datetime="<%- dt %>"><%- d %></time>
        <div class="p-blog-card__titleBox">
            <% if (type === 'top') { %>
            <h3 class="p-blog-card__title"><%- title %></h3>
            <% } else { %>
            <h4 class="p-blog-card__title"><%- title %></h4>
            <% } %>
        </div>
        <p class="p-blog-card__text"><%- text %></p>
    </div>
</a>
